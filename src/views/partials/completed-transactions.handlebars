<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-check-circle me-2"></i>
            Completed Transactions
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-hover">
                <thead class="table-dark" style="position: sticky; top: 0; z-index: 1;">
                    <tr>
                        <th>Order ID</th>
                        <th>Amount</th>
                        <th>Payment Instrument</th>
                        <th>Gateway</th>
                        <th>Status</th>
                        <th>Callback Received</th>
                        <th>Updated At</th>
                    </tr>
                </thead>
                <tbody id="completedTransactionsTable">
                    {{#if completed_transactions.length}}
                        {{#each completed_transactions}}
                        <tr>
                            <td>{{order_id}}</td>
                            <td>${{amount}}</td>
                            <td>
                                <span class="badge bg-info">{{payment_instrument.type}}</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{selected_gateway}}</span>
                            </td>
                            <td>
                                {{#if (eq status "success")}}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>{{status}}
                                    </span>
                                {{else if (eq status "failure")}}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times me-1"></i>{{status}}
                                    </span>
                                {{else}}
                                    <span class="badge bg-warning">{{status}}</span>
                                {{/if}}
                            </td>
                            <td>
                                {{#if callback_received}}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Yes
                                    </span>
                                {{else}}
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times me-1"></i>No
                                    </span>
                                {{/if}}
                            </td>
                            <td>{{formatDate updated_at}}</td>
                        </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-check-circle fa-2x mb-3 d-block"></i>
                                No completed transactions
                            </td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div> 